{
	"name": "laravel/laravel",
	"description": "The Laravel Framework.",
	"keywords": ["framework", "laravel"],
	"license": "MIT",
	"type": "project",
	"require": {
		"laravel/framework": "5.1.*",
        "pda/pheanstalk": "^3.0",
        "guzzlehttp/guzzle": "~6.0",
	  	"laravel/cashier": "~4.0",
		"maknz/slack": "^1.7",
	  	"laracasts/flash": "~1.3",
		"league/commonmark": "^0.9.0",
		"intervention/image": "^2.2",
		"socialiteproviders/instagram": "^1.1",
	  	"phoenix/eloquent-meta": "1.4.*",
		"sammyk/laravel-facebook-sdk": "~3.0@dev",
		"facebook/php-sdk-v4": "~5.0@dev",
	  	"oriceon/oauth-5-laravel": "dev-master",
		"pusher/pusher-php-server": "^2.2",
		"predis/predis": "1.0.3",
		"socialiteproviders/spotify": "^1.1",
		"jenssegers/rollbar": "^1.4",
		"guzzle/guzzle": "^3.9",
		"sentry/sentry-laravel": "^0.9.2"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"App\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
